source 'https://rubygems.org'

group :development do
    gem 'jekyll', '~> 3.0'
    gem 'pygments.rb'
    gem 'jekyll-paginate'
    gem 'octopress', '~> 3.0'
    gem 'octopress-image-tag'
    gem 'octopress-date-format'
    gem 'octopress-codeblock'
    gem 'octopress-quote-tag'
    gem 'octopress-linkblog'
    gem 'octopress-hooks', '~> 2.6.2'
    # other versions cause "jekyll serve" to fail
    gem 'listen', '2.7.8'
    # for compatibility with 'listen' version
    gem 'celluloid', '0.16.0'
    # markdown processor
    gem 'rdiscount', '~> 2.0'
    # smartquotes, etc. for rdiscount
    gem 'rubypants', '~> 0.2.0'
    gem 'jekyll-sitemap', '~> 0.8.0'
    # below are required for various Octopress plugins
    # extensions to Ruby's string class
    gem 'stringex', '~> 1.4.0'
    # HTML templating
    gem 'haml', '~> 4.0'
    # Textile processing
    gem 'RedCloth', '~> 4.2.9'
    # CSS framework
    gem 'compass', '~> 0.12.2'
    # use globs in SASS
    gem 'sass-globbing', '~> 1.0.0'
end
